

# set up vimrc
tee -a ~/.zshrc  <<'EOF'
# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# utf-8 used
export LANG=ja_JP.UTF-8

# editor
export EDITOR=vim

# fix typo
setopt correct

#setopt no_beep

# tab
setopt complete_in_word

# prompt
autoload -U promptinit; promptinit
prompt pure

# switch arch path
arch=`uname -m`
if [ "$arch" = "x86_64" ]; then
  export PATH="$PATH:/opt/homebrew/bin"
  export PATH="/usr/local/bin/:$PATH"
  # dotnet core 3.1 is not supported by arm
  export PATH="/install-directory-full-path/git/github/sdk/.dotnet:$PATH"

  # nodenv
  export PATH="$HOME/.nodenv/bin:$PATH"
  eval "$(nodenv init -)"
else
  export PATH="/opt/homebrew/bin:$PATH"
  # volta(node)
  export VOLTA_HOME="$HOME/.volta"
  export PATH="$VOLTA_HOME/bin:$PATH"
fi

# zsh-completions
fpath=(path/to/zsh-completions/src $fpath)

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# peco
function peco-history-selection() {
    BUFFER=`history -n 1 | tail -r  | awk '!a[$0]++' | peco`
    CURSOR=$#BUFFER
    zle reset-prompt
}

zle -N peco-history-selection
bindkey '^R' peco-history-selection

# check usb status
alias lsusb="system_profiler SPUSBDataType"

# remove branch
alias remove-branch="git branch --merged|egrep -v '\*|develop|master'|xargs git branch -d"

# check ip address v4
alias checkip="ifconfig | grep 192"

EOF
